    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Latest day",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "args": [
                "--latest"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Create new day",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "args": [
                "create",
                "-l"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Prompt day",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal"
        },
    ]
}